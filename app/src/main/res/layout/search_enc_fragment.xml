<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sear"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"/>

            <!--SearchView component: https://github.com/iammert/MultiSearchView-->
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="搜索"

                android:textColor="@color/brown"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>


        <com.iammert.library.ui.multisearchviewlib.MultiSearchView
            android:id="@+id/multiSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:searchTextStyle="@style/SearchTextStyle"
            tools:ignore="MissingClass" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="156dp"
                android:layout_marginTop="76dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dp"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="20dp"
                app:riv_corner_radius="5dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/image1"
                app:layout_constraintTop_toTopOf="@id/image1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="108dp"
                android:layout_marginEnd="20dp"
                app:riv_corner_radius="5dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/image1"
                app:layout_constraintTop_toTopOf="@id/image1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:riv_corner_radius="5dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/image1"
                app:layout_constraintTop_toBottomOf="@+id/image1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                app:riv_corner_radius="5dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="@+id/image1"
                app:layout_constraintTop_toBottomOf="@+id/image1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="110dp"
                app:riv_corner_radius="5dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/image1"
                app:layout_constraintTop_toBottomOf="@+id/image1" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/paws"/>


    </LinearLayout>

</layout>