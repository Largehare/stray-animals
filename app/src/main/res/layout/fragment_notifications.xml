<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马路边边爱心人士"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/modify" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一起珍惜我们最幼小的朋友。"
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/donate"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/donate_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zuji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="足迹"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/set"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/donate"
            android:background="@drawable/adopt_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/adopt" />

            <TextView
                android:id="@+id/shezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="设置"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collection"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_below="@id/donate"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/adopt_selector"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="收藏"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/news"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_below="@id/set"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/collection"
            android:background="@drawable/donate_selector"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fabu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="发布"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>
