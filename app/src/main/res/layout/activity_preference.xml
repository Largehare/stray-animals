<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".preference_Activity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/please"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <View
                android:layout_width="8dp"
                android:layout_height="20dp"
                android:background="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您是否有过养宠物的经历？"
                android:textColor="@color/brown"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_selector_pre"
                android:text="是"
                android:textColor="@color/brown"
                android:textSize="17dp"/>
            <Button
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_selector_pre"
                android:text="否"
                android:textColor="@color/brown"
                android:textSize="17dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <View
                android:layout_width="8dp"
                android:layout_height="20dp"
                android:background="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的偏好"
                android:textColor="@color/brown"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/dog"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:foreground="@drawable/dog_sel"
                android:background="@drawable/btn_selector_pre"
                />

            <Button
                android:id="@+id/cat"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_selector_pre"

                android:foreground="@drawable/cat_sel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <View
                android:layout_width="8dp"
                android:layout_height="20dp"
                android:background="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您是否了解流浪动物救治知识？"
                android:textColor="@color/brown"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <Button
                android:id="@+id/know_a"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_selector_pre"
                android:text="不了解"
                android:textColor="@color/brown"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/know_b"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_selector_pre"
                android:text="较了解"
                android:textColor="@color/brown"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/know_c"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_selector_pre"
                android:text="了解"
                android:textColor="@color/brown"
                android:textSize="17sp"/>


        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:id="@+id/entry"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_selector"
            android:text="立即进入"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>